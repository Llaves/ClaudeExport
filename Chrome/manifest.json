{
  "manifest_version": 3,
  "name": "Claude Conversation Capture",
  "version": "1.2.0",
  "description": "Formats a Claude chat as HTML to mimic Claude behavior/",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
	  "16": "icons/icon16.png",
	  "32": "icons/icon32.png",
	  "48": "icons/icon48.png",
	  "96": "icons/icon96.png"
	},
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["html-converter.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
