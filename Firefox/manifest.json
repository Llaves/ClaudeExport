{
  "manifest_version": 2,
  "name": "Chat Conversation Capture",
  "version": "1.0.1",
  "description": "Captures JSON content from URLs containing chat_conversation/",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "<all_urls>"
  ],
  "icons": {
	  "16": "icons/icon16.png",
	  "32": "icons/icon32.png",
	  "48": "icons/icon48.png",
	  "96": "icons/icon96.png"
	},

  "background": {
    "scripts": ["markdown-converter.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
