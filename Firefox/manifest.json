{
  "manifest_version": 2,
  "name": "Claude Conversation Capture",
  "version": "1.2.0",
  "description": "Formats a Claude chat as HTML to mimic Claude behavior/",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "<all_urls>"
  ],
  "icons": {
	  "16": "icons/icon16.png",
	  "32": "icons/icon32.png",
	  "48": "icons/icon48.png",
	  "96": "icons/icon96.png"
	},
  "background": {
    "scripts": ["html-converter.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
