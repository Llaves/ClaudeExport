{
  "manifest_version": 2,
  "name": "Chat Conversation Capture",
  "version": "1.0",
  "description": "Captures JSON content from URLs containing chat_conversation/",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["markdown-converter.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
